<div class="login-expense">

<%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'registration-main', local: true do |f| %>

    <h1 class='form-header-text'>
      会員情報入力
    </h1>
 


    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
   <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) ニックネーム", maxlength:"40" %>

 
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>



  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>

<% end %>
</div>
