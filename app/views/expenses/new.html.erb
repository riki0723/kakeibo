<div class="new-expense">
  <div class="new-expense-form">
    <div class="new-expense-top">
      新規出費を登録する
    </div>

      <div class="new-expense-body">
        <%= form_with model: @expense, local: true do |f| %>
         <%= render 'layouts/error_messages', model: f.object %>

          <div class="new-expense-body-name">支払日</div>
          <%= f.date_select :start_time, id:"expense-day" %>

          <div class="new-expense-body-name">品物</div>
          <%= f.text_area :name, class:"expense-text", id:"expense-name", placeholder:"必須：購入した物", maxlength:"40" %>

         <div class="new-expense-body-name">金額</div>
         <span class="sell-yen">¥</span>
         <%= f.text_field :price, class:"price-input", id:"expense-price", placeholder:"必須：半角数字で入力してください" %>

          <div class="new-expense-body-name">購入場所</div>
          <%= f.text_area :wheretobuy, class:"expense-text", id:"expense-wheretobuy", placeholder:"必須：購入した場所", maxlength:"40" %>

          <div class="new-expense-body-name">項目</div>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"expense-category"}) %>

          <div class="new-expense-body-name">支払い方法</div>
          <%= f.collection_select(:payment_id, Payment.all, :id, :name, {}, {class:"select-box", id:"expense-payment"}) %>

          <div class="new-expense-body-name">メモ</div>
          <%= f.text_area :memo, class:"expense-text", id:"expense-memo" %>
 

          <div class="sell-btn-contents">
              <%= f.submit "登録する" ,class:"button-type1" %>
              <%=link_to 'もどる', root_path, class:"back-btn" %>
          </div>
        <% end %>
      </div>
  </div>
</div>